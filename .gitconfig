[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[user]
	name = Stephan Emmerich
	email = stephan.emmerich@nedap.com 
[alias]
	b = bisect
	br = branch
	c = commit
	co = checkout
	cp = cherry-pick
	cg = grep -Ii
	d = diff
	dc = diff --cached
	f = !git ls-files | grep -i --color
	gr = log --graph --pretty=oneline --abbrev-commit
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	m = mergetool
	s = status
	ss = status -sb
	sub = submodule
	wd = diff --word-diff=color
[diff "ruby"]
	funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[core]
	excludesfile = "~/.gitexcludes"
	editor = vim
[diff]
	tool = kdiff3
[merge]
	tool = kdiff3
[mergetool "kdiff3"]
	path = "/usr/bin/X11/kdiff3"
	keepBackup = false
	trustExitCode = false
[difftool "kdiff3"]
	path = "/usr/bin/X11/kdiff3"
	keepBackup = false
	trustExitCode = false
[push]
	default = current
[web]
	browser = google-chrome
[mergetool]
	keepBackup = false
